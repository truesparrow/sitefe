{
    "name": "@truesparrow/sitefe",
    "version": "0.9.1",
    "description": "The frontend to the truesparrow site application",
    "author": "CHM SQRT2 Team",
    "scripts": {
        "build": "webpack --config webpack.vendor-bundles.config.js && tsc && webpack",
        "serve-dev": "mkdir -p out/server && touch out/server/index.js && webpack --config webpack.vendor-bundles.config.js && tsc && node out/server/index.js | bunyan --output short",
        "serve-prod": "node out/server/index.js | bunyan --output simple",
        "test": "tsc && istanbul cover --config ./.istanbul.yml ./node_modules/mocha/bin/_mocha -- --require out/shared/jsdom-setup.js $(find out -name '*-test.js') && remap-istanbul -i ./build/coverage/coverage-final.json -o ./build/coverage/coverage-remapped.json && coverage-filter -i ./build/coverage/coverage-remapped.json -o ./build/coverage/coverage-filtered.json",
        "e2e-tests-prod": "tsc --project tsconfig.tests.json & cypress run --env $(cat config/env.sitefe  | grep -v '#' | xargs | tr ' ' ,) --record",
        "e2e-tests-dev": "tsc --project tsconfig.tests.json --watch & cypress open --env $(cat config/env.sitefe  | grep -v '#' | xargs | tr ' ' ,)",
        "push-coverage-to-codecov": "codecov -f ./build/coverage/coverage-filtered.json",
        "docs": "typedoc src/",
        "prepare-config": "rm -f secrets.tar secrets.tar.enc && tar -s '/.test//g' -cvf secrets.tar config/*.test config/gcp-*.json && travis encrypt-file --force secrets.tar && rm secrets.tar"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/truesparrow/sitefe.git"
    },
    "license": "MIT",
    "homepage": "https://github.com/truesparrow/sitefe#readme",
    "filesPack": {
        "out/client": "c:client",
        "out/server": "c:server",
        "webpack.config.js": "c:webpack.config.js",
        "package.json": "c:package.json",
        "tsconfig.json": "c:tsconfig.json",
        "tsconfig.client.json": "c:tsconfig.client.json"
    },
    "dependencies": {
        "@truesparrow/business-rules-js": "latest",
        "@truesparrow/common-js": "latest",
        "@truesparrow/common-server-js": "latest",
        "@truesparrow/content-sdk-js": "latest",
        "@truesparrow/identity-sdk-js": "latest",
        "async-middleware": "=1.2.1",
        "compression": "=1.7.1",
        "cookie-parser": "=1.4.3",
        "dotenv": "=5.0.1",
        "express": "=4.16.2",
        "http-status-codes": "=1.3.0",
        "knex": "=0.14.2",
        "log-timestamp": "=0.1.2",
        "mustache": "=2.3.0",
        "normalize.css": "=7.0.0",
        "pg": "=7.4.0",
        "raynor": "=0.14.0",
        "react": "=16.2.0",
        "react-dom": "=16.2.0",
        "react-helmet": "=5.2.0",
        "react-redux": "=5.0.6",
        "react-router-dom": "=4.2.2",
        "redux": "=3.7.2",
        "serialize-javascript": "=1.4.0",
        "uuid": "=3.1.0",
        "webpack-dev-middleware": "=2.0.1"
    },
    "devDependencies": {
        "@truesparrow/togemfury": "latest",
        "@types/bluebird": "=3.5.18",
        "@types/chai": "=4.0.8",
        "@types/compression": "=0.0.35",
        "@types/cookie-parser": "=1.4.1",
        "@types/dotenv": "=4.0.2",
        "@types/enzyme": "=3.1.6",
        "@types/enzyme-adapter-react-16": "=1.0.1",
        "@types/express": "=4.0.39",
        "@types/http-status-codes": "=1.0.29",
        "@types/knex": "=0.0.67",
        "@types/mocha": "=2.2.44",
        "@types/mustache": "=0.8.30",
        "@types/node": "=8.0.57",
        "@types/react": "=16.0.29",
        "@types/react-dom": "=16.0.3",
        "@types/react-helmet": "=5.0.3",
        "@types/react-redux": "=5.0.14",
        "@types/react-router-dom": "=4.2.3",
        "@types/serialize-javascript": "=1.3.2",
        "@types/supertest": "=2.0.4",
